<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whiteframe"
    android:padding="@dimen/list_item_padding_sides">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/feedlist_icon"
            android:alpha="0.5"
            android:layout_marginRight="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/feedlist_icon"
            android:layout_toEndOf="@+id/feedlist_icon"
            android:textStyle="bold"
            android:id="@+id/feed_list_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feed_list_text2"
            android:layout_below="@+id/feed_list_text"
            android:layout_alignLeft="@+id/feed_list_text"
            android:layout_alignStart="@+id/feed_list_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feed_list_text3"
            android:layout_below="@id/feed_list_text2"
            android:layout_alignLeft="@+id/feed_list_text"
            android:layout_alignStart="@+id/feed_list_text"/>
</RelativeLayout>