<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="36dp"
    tools:context=".LeadModule.LeadDetailDealer">

    <!--SHOP NAME-->
    <View
        android:id="@+id/lead_detail_shop_name_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/icon_replacement"
        android:alpha="0.38" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lead_detail_shop_name_icon"
        android:layout_toEndOf="@id/lead_detail_shop_name_icon"
        android:layout_alignTop="@id/lead_detail_shop_name_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:text="ชื่อร้าน" />
    <TextView
        android:id="@+id/lead_detail_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lead_detail_shop_name_icon"
        android:layout_toRightOf="@id/lead_detail_shop_name_icon"
        android:layout_alignBottom="@id/lead_detail_shop_name_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:text="ร้านคูโบต้าแถวบ้านลุง" />

    <!--RECORD DATE-->
    <View
        android:id="@+id/lead_detail_record_date_icon"
        android:layout_below="@id/lead_detail_shop_name_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/icon_replacement"
        android:alpha="0.38" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lead_detail_record_date_icon"
        android:layout_toEndOf="@id/lead_detail_record_date_icon"
        android:layout_alignTop="@id/lead_detail_record_date_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:text="วันที่บันทึกกิจกรรม" />
    <TextView
        android:id="@+id/lead_detail_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lead_detail_record_date_icon"
        android:layout_toRightOf="@id/lead_detail_record_date_icon"
        android:layout_alignBottom="@id/lead_detail_record_date_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:text="17 กรกฎาคม 2504" />

    <!--EVENT DATE-->
    <View
        android:id="@+id/lead_detail_event_date_icon"
        android:layout_below="@id/lead_detail_record_date_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/icon_replacement"
        android:alpha="0.38" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lead_detail_event_date_icon"
        android:layout_toEndOf="@id/lead_detail_event_date_icon"
        android:layout_alignTop="@id/lead_detail_event_date_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:text="วันที่จัดกิจกรรม" />
    <TextView
        android:id="@+id/lead_detail_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lead_detail_event_date_icon"
        android:layout_toRightOf="@id/lead_detail_event_date_icon"
        android:layout_alignBottom="@id/lead_detail_event_date_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:text="17 กรกฎาคม 2504" />

    <!--Code-->
    <View
        android:id="@+id/lead_detail_code_icon"
        android:layout_below="@id/lead_detail_event_date_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/icon_replacement"
        android:alpha="0.38" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lead_detail_code_icon"
        android:layout_toEndOf="@id/lead_detail_code_icon"
        android:layout_alignTop="@id/lead_detail_code_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:text="Code" />
    <TextView
        android:id="@+id/lead_detail_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lead_detail_code_icon"
        android:layout_toRightOf="@id/lead_detail_code_icon"
        android:layout_alignBottom="@id/lead_detail_code_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:text="ลูกค้า Walk-In" />

    <!--EVENT NAME-->
    <View
        android:id="@+id/lead_detail_event_name_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="400dp"
        android:layout_marginStart="400dp"
        android:background="@drawable/icon_replacement"
        android:alpha="0.38" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lead_detail_event_name_icon"
        android:layout_toEndOf="@id/lead_detail_event_name_icon"
        android:layout_alignTop="@id/lead_detail_event_name_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:text="ชื่อกิจกรรม" />
    <TextView
        android:id="@+id/lead_detail_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lead_detail_event_name_icon"
        android:layout_toRightOf="@id/lead_detail_event_name_icon"
        android:layout_alignBottom="@id/lead_detail_event_name_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:text="คูโบต้าฉลองวันเกิดลุง" />

    <!--Sales Name-->
    <View
        android:id="@+id/lead_detail_sales_name_icon"
        android:layout_below="@id/lead_detail_event_name_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="400dp"
        android:layout_marginStart="400dp"
        android:background="@drawable/icon_replacement"
        android:alpha="0.38" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lead_detail_sales_name_icon"
        android:layout_toEndOf="@id/lead_detail_sales_name_icon"
        android:layout_alignTop="@id/lead_detail_sales_name_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:text="ชื่อพนักงานขาย" />
    <TextView
        android:id="@+id/lead_detail_sales_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lead_detail_sales_name_icon"
        android:layout_toRightOf="@id/lead_detail_sales_name_icon"
        android:layout_alignBottom="@id/lead_detail_sales_name_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:text="นายขายดี ขายเก่ง" />

    <!--EVENT LOCATION-->
    <View
        android:id="@+id/lead_detail_event_location_icon"
        android:layout_below="@id/lead_detail_sales_name_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="400dp"
        android:layout_marginStart="400dp"
        android:background="@drawable/icon_replacement"
        android:alpha="0.38" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lead_detail_event_location_icon"
        android:layout_toEndOf="@id/lead_detail_event_location_icon"
        android:layout_alignTop="@id/lead_detail_event_location_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:text="สถานที่จัดกิจกรรม" />
    <TextView
        android:id="@+id/lead_detail_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lead_detail_event_location_icon"
        android:layout_toRightOf="@id/lead_detail_event_location_icon"
        android:layout_alignBottom="@id/lead_detail_event_location_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:text="ร้านคูโบต้า" />

    <!--Contact-->
    <View
        android:id="@+id/lead_detail_contact_icon"
        android:layout_below="@id/lead_detail_event_location_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="400dp"
        android:layout_marginStart="400dp"
        android:background="@drawable/icon_replacement"
        android:alpha="0.38" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lead_detail_contact_icon"
        android:layout_toEndOf="@id/lead_detail_contact_icon"
        android:layout_alignTop="@id/lead_detail_contact_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:text="Contact" />
    <TextView
        android:id="@+id/lead_detail_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lead_detail_contact_icon"
        android:layout_toRightOf="@id/lead_detail_contact_icon"
        android:layout_alignBottom="@id/lead_detail_contact_icon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:text="Jacky Chan" />

</RelativeLayout>
