<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".skcmodule.ContactSKC">
    >

    <LinearLayout
        android:id="@+id/skc_table_head"
        android:layout_height="40dp"
        android:layout_width="900dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/whitefram_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/skc_table_head_name"
            android:layout_width="@dimen/skc_list_item_long_space"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/list_item_padding_sides">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/default_color"
                android:text="Name"
                android:id="@+id/skc_table_head_name_word" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/asc_sort"
                android:layout_toEndOf="@id/skc_table_head_name_word"
                android:layout_toRightOf="@id/skc_table_head_name_word" />
        </RelativeLayout>
        <TextView
            android:id="@+id/skc_table_head_phone"
            android:layout_width="@dimen/skc_list_item_short_space"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/default_color"
            android:text="Phone" />
        <TextView
            android:layout_width="@dimen/skc_list_item_long_space"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/default_color"
            android:text="Email" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:id="@+id/skc_listview"
        android:layout_gravity="left|top"

        android:layout_below="@+id/skc_table_head"
        android:layout_alignLeft="@+id/skc_table_head"
        android:layout_alignStart="@+id/skc_table_head"
        android:layout_alignRight="@+id/skc_table_head"
        android:layout_alignEnd="@+id/skc_table_head"
        android:layout_above="@+id/skc_fab_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/skc_fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src ="@drawable/ic_add_white_24dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>
