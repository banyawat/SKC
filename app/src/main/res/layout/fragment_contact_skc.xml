<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".skcmodule.ContactSKC">
    >

    <LinearLayout
        android:id="@+id/skc_table_head"
        android:layout_height="40dp"
        android:layout_width="900dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/whiteframe"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lead_table_head_checkbox"
            android:layout_height="wrap_content"
            android:layout_width="35dp"
            android:text=""/>
        <RelativeLayout
            android:id="@+id/skc_table_head_name"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_weight="0.4">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="Name"
                android:id="@+id/skc_table_head_name_word" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/asc_sort"
                android:layout_toEndOf="@id/skc_table_head_name_word"
                android:layout_toRightOf="@id/skc_table_head_name_word" />
        </RelativeLayout>
        <TextView
            android:id="@+id/skc_table_head_phone"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Phone"
            android:layout_weight="0.17" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Email"
            android:layout_weight="0.5" />
    </LinearLayout>

    <ListView
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/skc_listview"
        android:layout_gravity="left|top"
        android:choiceMode="multipleChoice"
        android:background="@drawable/whiteframe"
        android:layout_below="@+id/skc_table_head"
        android:layout_alignLeft="@+id/skc_table_head"
        android:layout_alignStart="@+id/skc_table_head"
        android:layout_marginBottom="45dp"
        android:layout_alignRight="@+id/skc_table_head"
        android:layout_alignEnd="@+id/skc_table_head" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/skc_fab_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src ="@drawable/ic_remove_white_24dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/skc_fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src ="@drawable/ic_add_white_24dp"
        android:layout_above="@+id/skc_fab_remove"
        android:layout_alignRight="@+id/skc_fab_remove"
        android:layout_alignLeft="@+id/skc_fab_remove"
        android:layout_marginBottom="1dp"
         />


</RelativeLayout>
