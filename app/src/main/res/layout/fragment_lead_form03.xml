<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LeadModule.LeadForm03"
    android:padding="25dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_weight="0.4"
        android:baselineAligned="false"
        android:gravity="center_vertical">

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lead_form3_interestproduct"
            android:spinnerMode="dropdown"
            android:layout_weight="0.5" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lead_form3_interestseries"
            android:layout_weight="0.5"
            android:hint="รุ่นที่สนใจ" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="ADD"
            android:textColor="@color/default_color"
            android:id="@+id/lead_form3_add"
            android:background="@drawable/button_shape"
            android:layout_margin="@dimen/list_item_padding_sides" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.2"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/lead_form3_listlimit"
            android:layout_gravity="right"
            android:layout_weight="9" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lead_form3_interestlist"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.4"
        android:weightSum="2"
        android:gravity="center_vertical">

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lead_form3_customerstatus"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lead_form3_agriarea"
            android:layout_weight="1"
            android:hint="พื้นที่เพาะปลูก" />
    </LinearLayout>
</LinearLayout>
