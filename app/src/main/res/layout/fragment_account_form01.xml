<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theteus.kubota.AccountModule.AccountForm01">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="25dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account_form1_name"
                android:drawableLeft="@drawable/ic_person"
                android:ems="15"
                android:layout_gravity="center_horizontal"
                android:hint="Account Name" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account_form1_parent"
                android:drawableLeft="@drawable/ic_supervisor_account_black"
                android:ems="15"
                android:layout_gravity="center_horizontal"
                android:hint="Parent Account" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account_form1_ticker"
                android:drawableLeft="@drawable/ic_action_ticket"
                android:ems="15"
                android:layout_gravity="center_horizontal"
                android:hint="Ticker Symbol" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="25dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account_form1_phone"
                android:ems="15"
                android:drawableLeft="@drawable/ic_phone"
                android:layout_gravity="center_horizontal"
                android:hint="Phone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account_form1_fax"
                android:drawableLeft="@drawable/ic_print"
                android:ems="15"
                android:layout_gravity="center_horizontal"
                android:hint="Fax" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account_form1_web"
                android:drawableLeft="@drawable/ic_public"
                android:ems="15"
                android:layout_gravity="center_horizontal"
                android:hint="Website" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
